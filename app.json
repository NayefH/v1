{
  "expo": {
    "name": "my-appv1",
    "slug": "my-appv1",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/iconexample1.png", //////!//////////
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Diese App benötigt Zugriff auf die Kamera, um Fotos und Videos aufzunehmen.",
        "NSMicrophoneUsageDescription": "Diese App benötigt Zugriff auf das Mikrofon, um Audio aufzunehmen."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": ["CAMERA", "RECORD_AUDIO"]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/images/iconexample1splash.png", //////!//////////
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#000000"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
